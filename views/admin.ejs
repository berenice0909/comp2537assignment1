<%- include('templates/header') %>

<h1 class="display-4 fw-light text-center mb-4 mt-4">Admin Panel</h1>

<div class="container" style="max-width: 700px;">
  <ul class="list-group">
    <% users.forEach(u => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= u.name %> (<%= u.user_type || 'user' %>)</span>
        <div>
          <% if (u.user_type !== 'admin') { %>
            <a href="/promote/<%= u._id %>" class="btn btn-danger btn-sm me-2">Promote to Admin</a>
          <% } %>
          <% if (u.user_type === 'admin') { %>
            <a href="/demote/<%= u._id %>" class="btn btn-success btn-sm">Demote to User</a>
          <% } %>
        </div>
      </li>
    <% }) %>
  </ul>
</div>


<div class="text-center mt-4">
  <a href="/logout" class="btn btn-outline-secondary">Logout</a>
</div>


  <%- include('templates/footer') %>

